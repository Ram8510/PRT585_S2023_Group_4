@model IEnumerable<CDU_Music_Lessons_Application.Models.Lesson>

@{
    ViewData["Title"] = "List of Available Lessons";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LessonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LessonDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TermAndYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LessonDateAndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LessonLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instrument)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tutor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LessonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LessonDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermAndYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LessonDateAndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LessonLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instrument.InstrumentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tutor.Tutorname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration.DurationTypeAndCost)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
